{% extends 'base.html.twig' %}

{% block robots %}index, follow{% endblock %}
{% block title %}{{ 'page_home_title' | trans }}{% endblock %}

{% block assets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/home.scss') }}">
{% endblock %}

{% block content %}
    <!-- Hero -->
    <section id="home-hero" class="home-hero__container">
        <div class="fade-in-effects-initial home-hero__container-image" 
        data-controller="animation-fade-in" data-animation="fade-in-left-effects">
            <img src="{{ asset('images/home-hero-illustration.webp') }}" alt="{{ 'page_home_hero_image_alt' | trans }}">
        </div>
        <div class="fade-in-effects-initial home-hero__container-presentation" 
        data-controller="animation-fade-in" data-animation="fade-in-up-effects">
            <div class="home-hero__container-presentation-title">
                <h2 class="home-hero__container-presentation-title-main">{{ 'site_author' | trans }}</h2>
                <h3 class="home-hero__container-presentation-title-secondary">{{ 'page_home_hero_title_secondary' | trans }}</h3>
            </div>
            <div class="home-hero__container-presentation-description">
                <p>
                    {{ 'page_home_hero_presentation_text1' | trans }}
                </p>
                <br>
                <p>
                    {{ 'page_home_hero_presentation_text2' | trans }}
                </p>
                <br>
                <p>
                    {{ 'page_home_hero_presentation_text3' | trans }}
                </p>
            </div>
            {% include "components/button-scroll-to-next-section.html.twig" with {
                'data_target': '#home-portfolio',
                'aria_label':  'portfolio_aria' | trans
            } %}
        </div>
    </section>

    <!-- Portfolio -->
    <section id="home-portfolio" class="home-portfolio__container">
        <div class="fade-in-effects-initial" data-controller="animation-fade-in" data-animation="fade-in-up-effects">
            <div class="section-title link-effects home-portfolio__container-title" 
            data-target="home-portfolio" data-action="click->scroll-to-section#scrollToSection">
                <svg role="img" aria-labelledby="home-portfolio__container-title-h2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 14"><path d="M4.00001 2H0.780006C0.410006 2 0.0400063 2.32 0.0900063 2.84L1.65001 12.83C1.65001 12.83 3.50001 5.47 3.86001 3.7C3.97001 3.17 4.47001 3 4.84001 3H10C10 3 9.30001 0.92 9.23001 0.69C9.11001 0.25 8.89001 0 8.45001 0H5.14001C4.78001 0 4.44001 0.23 4.34001 0.64C4.25001 1.04 4.00001 2 4.00001 2ZM8.88001 2H4.88001C4.88001 2 5.30001 1 5.75001 1H7.88001C8.36001 1 8.88001 2 8.88001 2ZM2.67001 13.25C2.36001 13.72 1.91001 14 1.41001 14H17.14C17.68 14 18.06 13.69 18.17 13.17C18.61 10.98 19.85 4.73 19.85 4.73C19.92 4.23 19.55 4 19.23 4H16V2.53C16 2.37 15.74 2 15.34 2H11.58C11.06 2 10.71 2.58 10.71 2.58L10 4H5.59001C5.27001 4 4.96001 4.19 4.90001 4.5C4.90001 4.5 3.31001 11.2 3.18001 11.83C3.11001 12.2 2.96001 12.82 2.67001 13.25ZM15.38 4H11C11 4 11.58 3 12.13 3H14.42C15.13 3 15.38 4 15.38 4Z"/></svg>
                <h2 id="home-portfolio__container-title-h2">{{ 'page_home_portfolio_title' | trans }}</h2>
            </div>
        </div>

        <div class="home-portfolio__container-projects" data-controller="portfolio-card">
            {% include "components/home/portfolio-card.html.twig" with {
                'title': 'Site personnel (V2)',
                'description': 'Évolution de mon site personnel WordPress vers une application PHP/Symfony avec de nouvelles fonctionnalités.',
                'image': 'images/portfolio/portfolio-gaelpaquien-v2.webp'
            } %}
            {% include "components/home/portfolio-card.html.twig" with {
                'title': 'Site personnel (V1)',
                'description': 'Création de mon site personnel avec WordPress.',
                'image': 'images/portfolio/portfolio-gaelpaquien-v1.webp'
            } %}
            {% include "components/home/portfolio-card.html.twig" with {
                'title': 'RG Clean Car',
                'description': 'Création d\'un site vitrine avec WordPress pour RG Clean Car, société de nettoyage à domicile.',
                'image': 'images/portfolio/portfolio-rgcleancar.webp'
            } %}
            {% include "components/home/portfolio-card.html.twig" with {
                'title': 'ToDo & Co',
                'description': 'Audit (qualité et performance) d\'une application existante afin d\'identifier les tâches nécessaires à son amélioration, puis optimisation et réduction de la dette technique de cette application.',
                'image': 'images/portfolio/portfolio-todoandco.webp'
            } %}
            {% include "components/home/portfolio-card.html.twig" with {
                'title': 'BileMo API',
                'description': 'Création d\'une API REST avec PHP/Symfony, permettant d\'exposer une liste de produits et d\'utilisateurs accessible aux clients authentifiés.',
                'image': 'images/portfolio/portfolio-bilemoapi.webp'
            } %}
            {% include "components/home/portfolio-card.html.twig" with {
                'title': 'SnowTricks',
                'description': 'Création d\'un site web collaboratif avec PHP/Symfony, permettant aux utilisateurs de partager des figures de snowboard.',
                'image': 'images/portfolio/portfolio-snowtricks.webp'
            } %}
            {% include "components/home/portfolio-card.html.twig" with {
                'title': 'Blog PHP',
                'description': 'Création d\'un blog avec PHP.',
                'image': 'images/portfolio/portfolio-blogphp.webp'
            } %}
            {% include "components/home/portfolio-card.html.twig" with {
                'title': 'Archive OpenClassrooms',
                'description': 'Une archive de tous mes projets réalisés pendant mes deux formations chez OpenClassrooms.',
                'image': 'images/portfolio/portfolio-archive-openclassrooms.webp'
            } %}
        </div>
        {% include "components/button-scroll-to-next-section.html.twig" with {
            'data_target': '#home-reviews',
            'aria_label': 'reviews_aria' | trans
        } %}
    </section>

    <!-- Reviews -->
    <section id="home-reviews" class="home-reviews__container" 
    data-controller="reviews-carousel reviews-popup" data-reviews-carousel-auto-scroll-interval-value="15000">
        <div class="overlay" data-reviews-popup-target="overlay"></div>
        <div class="fade-in-effects-initial" data-controller="animation-fade-in" data-animation="fade-in-up-effects">
            <div class="section-title link-effects home-reviews__container-title" 
            data-target="home-reviews" data-action="click->scroll-to-section#scrollToSection">
                <svg role="button" aria-labelledby="home-reviews__container-title-h2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M316.9 18C311.6 7 300.4 0 288.1 0s-23.4 7-28.8 18L195 150.3 51.4 171.5c-12 1.8-22 10.2-25.7 21.7s-.7 24.2 7.9 32.7L137.8 329 113.2 474.7c-2 12 3 24.2 12.9 31.3s23 8 33.8 2.3l128.3-68.5 128.3 68.5c10.8 5.7 23.9 4.9 33.8-2.3s14.9-19.3 12.9-31.3L438.5 329 542.7 225.9c8.6-8.5 11.7-21.2 7.9-32.7s-13.7-19.9-25.7-21.7L381.2 150.3 316.9 18z"/></svg>
                <h2 id="home-reviews__container-title-h2">{{ 'page_home_reviews_title' | trans }}</h2>
            </div>
        </div>

        <div class="home-reviews__container-carousel" data-reviews-carousel-target="reviewsCarousel">
            <button class="fade-in-effects-initial home-reviews__container-carousel-btn-previous-item" type="button" 
            aria-label="{{ 'page_home_reviews_previous_aria' | trans }}" data-controller="animation-fade-in" data-animation="fade-in-left-effects">
                <svg class="icon-effects" role="img" aria-hidden="true" 
                data-reviews-carousel-target="previousButton" data-action="click->reviews-carousel#previous" 
                xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><g clip-path="url(#clip0_308_71)"><path fill-rule="evenodd" clip-rule="evenodd" d="M7.94015 13.06C7.65924 12.7787 7.50146 12.3975 7.50146 12C7.50146 11.6025 7.65924 11.2212 7.94015 10.94L13.5961 5.28199C13.8775 5.00073 14.2591 4.84277 14.657 4.84287C14.854 4.84291 15.0491 4.88176 15.231 4.95719C15.413 5.03262 15.5784 5.14316 15.7176 5.28249C15.8569 5.42182 15.9674 5.58722 16.0427 5.76924C16.1181 5.95127 16.1568 6.14635 16.1568 6.34335C16.1567 6.54035 16.1179 6.73541 16.0424 6.91739C15.967 7.09938 15.8565 7.26472 15.7171 7.40399L11.1221 12L15.7181 16.596C15.8615 16.7343 15.9758 16.8998 16.0545 17.0827C16.1332 17.2657 16.1747 17.4625 16.1765 17.6617C16.1783 17.8608 16.1405 18.0584 16.0651 18.2428C15.9898 18.4271 15.8785 18.5947 15.7377 18.7356C15.597 18.8765 15.4295 18.9879 15.2452 19.0634C15.0609 19.1389 14.8634 19.177 14.6643 19.1754C14.4651 19.1737 14.2682 19.1324 14.0852 19.0539C13.9022 18.9754 13.7366 18.8612 13.5981 18.718L7.93815 13.06H7.94015Z"/></g><defs><clipPath id="clip0_308_71"><rect width="24" height="24" fill="white"/></clipPath></defs></svg>
            </button>
            {% include "components/home/reviews-carousel-item.html.twig" with {
                'quote': 'Gaël a réalisé notre site web "www.rgcleancar.fr" exactement comme nous l\'avions souhaité, communication claire et professionnelle, 
                          je recommande !',
                'author_firstname': 'Jérôme',
                'author_lastname': 'Gaviot',
                'author_company': 'RG Clean Car',
                'author_role': 'Cofondateur ',
                'publication_date': '11/01/2024',
                'publication_source': 'gaelpaquien.com',
                'quoteId': 'home-reviews-quote-' ~ random(1, 999),
                'classActive': true
            } %}
            {% include "components/home/reviews-carousel-item.html.twig" with {
                'quote': 'En reconversion professionnelle pour se spécialiser dans le développement web full stack, Gaël a suivi la formation d’openclassrooms.
                          Le point fort de Gaël est sa détermination : ne rien lâcher et aller toujours au bout des choses. 
                          Sérieux, appliqué et rigoureux, il a su monter en compétence rapidement et réussir ses projets avec brio. 
                          Je te souhaite une très bonne continuation avec beaucoup de réussite.',
                'author_firstname': 'Thomas',
                'author_lastname': 'Gérault',
                'author_company': 'OpenClassrooms',
                'author_role': 'Mentor',
                'publication_date': '28/06/2021',
                'publication_source': 'LinkedIn',
                'quoteId': 'home-reviews-quote-' ~ random(1, 999)
            } %}
            {# 'quoteId': 'home-reviews-quote-' ~ loop.index #}
            <button class="fade-in-effects-initial home-reviews__container-carousel-btn-next-item" type="button" 
            aria-label="{{ 'page_home_reviews_next_aria' | trans }}" data-controller="animation-fade-in" data-animation="fade-in-right-effects">
                <svg class="icon-effects" role="img" aria-hidden="true" 
                data-reviews-carousel-target="nextButton" data-action="click->reviews-carousel#next" 
                xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><g clip-path="url(#clip0_303_78)"><path fill-rule="evenodd" clip-rule="evenodd" d="M16.0599 10.94C16.3408 11.2212 16.4986 11.6025 16.4986 12C16.4986 12.3975 16.3408 12.7787 16.0599 13.06L10.4039 18.718C10.1225 18.9992 9.74089 19.1572 9.34304 19.1571C8.94518 19.157 8.56365 18.9989 8.28239 18.7175C8.00113 18.4361 7.84317 18.0545 7.84326 17.6566C7.84336 17.2588 8.00149 16.8772 8.28289 16.596L12.8789 12L8.28289 7.40397C8.00952 7.1212 7.85814 6.74237 7.86137 6.34907C7.8646 5.95577 8.02218 5.57947 8.30016 5.30123C8.57815 5.02298 8.95429 4.86505 9.34759 4.86145C9.74088 4.85785 10.1199 5.00887 10.4029 5.28197L16.0609 10.939L16.0599 10.94Z"/></g><defs><clipPath id="clip0_303_78"><rect width="24" height="24" fill="white"/></clipPath></defs></svg>
            </button>

            <!-- Mobile buttons previous/next item -->
            <div class="home-reviews__container-carousel-btn-mobile">
                <button class="btn home-reviews__container-carousel-btn-mobile-previous-item" type="button" 
                aria-label="{{ 'page_home_reviews_previous_aria' | trans }}" 
                data-reviews-carousel-target="mobilePreviousButton" data-action="click->reviews-carousel#previous">
                    {{ 'previous' | trans }}
                </button>

                <button class="btn home-reviews__container-carousel-btn-mobile-next-item" type="button" 
                aria-label="{{ 'page_home_reviews_next_aria' | trans }}" 
                data-reviews-carousel-target="mobileNextButton" data-action="click->reviews-carousel#next">
                    {{ 'next' | trans }}
                </button>
            </div>
        </div>

        <div class="fade-in-effects-initial home-reviews__container-btn-open-popup-add-review" 
        data-controller="animation-fade-in" data-animation="fade-in-up-effects">
            <button id="btn-open-home-reviews-popup" class="btn" type="button" aria-label="{{ 'page_home_reviews_publish' | trans }}" aria-expanded="false" 
            data-reviews-popup-target="openButton" data-action="click->reviews-popup#open">
                {{ 'page_home_reviews_publish' | trans }}
            </button>
        </div>

        {% include "components/home/reviews-popup.html.twig" %}
        {% include "components/button-scroll-to-next-section.html.twig" with {
            'data_target': '#home-contact',
            'aria_label': 'contact_aria' | trans
        } %}
    </section>

    <!-- Contact -->
    <section id="home-contact" class="home-contact__container">
        <div class="fade-in-effects-initial" data-controller="animation-fade-in" data-animation="fade-in-up-effects">
            <div class="section-title link-effects home-contact__container-title" 
            data-target="home-contact" data-action="click->scroll-to-section#scrollToSection">
                <svg role="button" aria-labelledby="home-contact__container-title-h2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512"><!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M208 352c114.9 0 208-78.8 208-176S322.9 0 208 0S0 78.8 0 176c0 38.6 14.7 74.3 39.6 103.4c-3.5 9.4-8.7 17.7-14.2 24.7c-4.8 6.2-9.7 11-13.3 14.3c-1.8 1.6-3.3 2.9-4.3 3.7c-.5 .4-.9 .7-1.1 .8l-.2 .2 0 0 0 0C1 327.2-1.4 334.4 .8 340.9S9.1 352 16 352c21.8 0 43.8-5.6 62.1-12.5c9.2-3.5 17.8-7.4 25.3-11.4C134.1 343.3 169.8 352 208 352zM448 176c0 112.3-99.1 196.9-216.5 207C255.8 457.4 336.4 512 432 512c38.2 0 73.9-8.7 104.7-23.9c7.5 4 16 7.9 25.2 11.4c18.3 6.9 40.3 12.5 62.1 12.5c6.9 0 13.1-4.5 15.2-11.1c2.1-6.6-.2-13.8-5.8-17.9l0 0 0 0-.2-.2c-.2-.2-.6-.4-1.1-.8c-1-.8-2.5-2-4.3-3.7c-3.6-3.3-8.5-8.1-13.3-14.3c-5.5-7-10.7-15.4-14.2-24.7c24.9-29 39.6-64.7 39.6-103.4c0-92.8-84.9-168.9-192.6-175.5c.4 5.1 .6 10.3 .6 15.5z"/></svg>
                <h2 id="home-contact__container-title-h2">{{ 'page_home_contact_title' | trans }}</h2>
            </div>
        </div>

        <form class="fade-in-effects-initial home-contact__container-form" action="#" method="post" 
        data-controller="animation-fade-in" data-animation="fade-in-up-effects">
            <div class="form-identity-group">
                <span>Identité*</span>
                <div>
                    <label for="form-contact-firstname" hidden>Prénom</label>
                    <input type="text" id="form-contact-firstname" name="form-contact-firstname" placeholder="Prénom" required>
                    <label for="form-contact-name" hidden>Nom</label>
                    <input type="text" id="form-contact-name" name="form-contact-name" placeholder="Nom" required>
                </div>
            </div>
            <div class="form-group">
                <label for="form-contact-email">Email*</label>
                <input type="email" id="form-contact-email" name="form-contact-email" placeholder="Email" required>
            </div>
            <div class="form-group">
                <label for="form-contact-phone">Téléphone (facultatif)</label>
                <input type="tel" id="form-contact-phone" name="form-contact-phone" placeholder="Téléphone">
            </div>
            <div class="form-group">
                <label for="form-contact-subject">Sujet*</label>
                <input type="text" id="form-contact-subject" name="form-contact-subject" placeholder="Sujet du message" required>
            </div>
            <div class="form-group">
                <label for="form-contact-message">Message*</label>
                <textarea id="form-contact-message" name="form-contact-message" placeholder="Message" required></textarea>
            </div>
            <div class="form-group">
                <label for="form-contact-attachment">Joindre des fichiers (facultatif)</label>
                <input type="file" id="form-contact-attachment" name="form-contact-attachment" aria-label="Joindre des fichiers">
            </div>
            <div class="form-switch">
                <span class="form-switch-text">Recevoir une copie du message</span>
                <label for="form-switch-message" class="form-switch-toggle">
                    <input type="checkbox" id="form-switch-message" name="form-switch-message"aria-label="Recevoir une copie du message">
                    <span class="form-switch-toggle-slider"></span>
                </label>
            </div>
            <button class="btn" type="submit" aria-label="Envoyer le message">
                Envoyer le message
            </button>
            <div class="form-infos">
                <p>
                    *Les données saisies dans ce formulaire ne sont pas stockées et ne sont utilisées que pour vous répondre.
                </p>
            </div>
        </form>
        {% include "components/button-scroll-to-next-section.html.twig" with {
            'data_target': '#footer',
            'aria_label': 'page_home_contact_scrollToNext_aria' | trans
        } %}
    </section>
{% endblock %}
