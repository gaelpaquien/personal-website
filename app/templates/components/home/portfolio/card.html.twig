{% set title = title|default('Titre du projet') %}
{% set description = description|default('Description du projet') %}
{% set image = image|default('images/portfolio/portfolio-default.webp') %}
{% set tags = tags|default([]) %}

<div class="fade-in-effects-initial card-list-item"
     data-animation-fade-in-target="fadeIn"
     data-animation="fade-in-up-effects"
     data-card-target="card"
     data-action="click->card#pressCard"
     data-url="{{ path('app_blog_show', {'slug': related_blog_post_slug}) }}"
>
    <div class="card-list-item-image">
        <img src="{{ asset(image) }}" alt="{{ title }} - {{ description }}" width="800" height="450" loading="lazy">
        <div class="card-list-item-image-title">
            <h3 class="card-list-item-content-title">{{ title }}</h3>
        </div>
        <div class="card-list-item-image-tags">
            {% for tag in tags|slice(0, 5) %}
                <span class="tag">{{ tag }}</span>
            {% endfor %}
            {% if tags|length > 5 %}
                <span class="tag">+{{ tags|length - 5 }} autre{% if tags|length > 6 %}s{% endif %}</span>
            {% endif %}
        </div>
    </div>
    <div class="card-list-item-content">
        <p class="card-list-item-description">{{ description }}</p>
    </div>
</div>