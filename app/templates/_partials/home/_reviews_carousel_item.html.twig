        <p id="{{ quoteId }}">
            {{ quote }}
        </p>
    </div>
    <hr>
    <div class="home-reviews__container-carousel-item-infos">
        <p class="home-reviews__container-carousel-item-infos-author">
            {{ author_firstname }} {{ author_lastname|first }}. {% if author_company %}- {% endif %}
            {% if author_role and author_company %}{{ author_role }} {{ author_company }}{% endif %}
            {% if not author_role and author_company %}{{ author_company }}{% endif %}
        </p>
        <p class="home-reviews__container-carousel-item-infos-source">
            Publié le {{ publication_date }} sur {{ publication_source}}
        </p>
    </div>

    <!-- Mobile infos -->
    <div class="home-reviews__container-carousel-item-infos-mobile">
        <p class="home-reviews__container-carousel-item-infos-mobile-author">
            {{ author_firstname }} {{ author_lastname|first }}.
        </p>
        {% if author_company %}
            <p class="home-reviews__container-carousel-item-infos-mobile-company">
                {% if author_role and author_company %}{{ author_role }} {{ author_company }}{% endif %}
                {% if not author_role and author_company %}{{ author_company }}{% endif %}
            </p>
        {% endif %}
        <p class="home-reviews__container-carousel-item-infos-mobile-source">
            {{ publication_date }} - {{ publication_source}}
        </p>
    </div>
</div>
