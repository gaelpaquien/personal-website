{% set quote = quote|default('Citation') %}
{% set author_firstname = author_firstname|default('Prénom de l\'auteur') %}
{% set author_lastname = author_lastname|default('Nom de l\'auteur') %}
{% set author_company = author_company|default(false) %}
{% set author_role = author_role|default(false) %}
{% set publication_date = publication_date|default('(Date de publication)') %}
{% set publication_source = publication_source|default('Source') %}
{% set quoteId = quoteId|default('home-reviews-quote-' ~ random(1, 999)) %}
{% set classActive = classActive|default(false) %}

<div class="home-reviews__container-carousel-item {% if classActive %}active{% endif %}" data-reviews-carousel-target="item">
    <div class="home-reviews__container-carousel-item-quote">
